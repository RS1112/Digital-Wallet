<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".home_page">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_sliding"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="9dp"
        app:cardBackgroundColor="#DAD2AB"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:iss_auto_cycle="true"
        app:iss_delay="1000"
        app:iss_period="1000"
        app:iss_text_align="CENTER" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="9dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="241dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
            android:id="@+id/gift"
            android:layout_width="80dp"
            android:layout_height="80dp"
                android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/baseline_card_giftcard" />
            <TextView
                android:id="@+id/giftcard_txt"
                android:text="Gift Voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="241dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/search"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/baseline_search" />
            <TextView
                android:id="@+id/search_txt"
                android:text="Search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="241dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/person"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/baseline_person" />
            <TextView
                android:id="@+id/profile_txt"
                android:text="Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="241dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/balance"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/baseline_account_balance_wallet_24" />
            <TextView
                android:id="@+id/balance_txt"
                android:text="Check Balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="241dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/erupi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/baseline_currency_rupee" />
            <TextView
                android:id="@+id/serupi_txt"
                android:text="e-RUPI notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="241dp"
            app:cardBackgroundColor="#DAD2AB"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/msg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/baseline_message" />
            <TextView
                android:id="@+id/msg_txt"
                android:text="Messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="590dp"
        android:layout_marginEnd="9dp"
        app:cardBackgroundColor="#DAD2AB"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="103dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/scan_qr"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan QR Code"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="230dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="103dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/your_qr"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your QR Code"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logout"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="58dp"
        android:backgroundTint="@color/black"
        android:text="@string/logout"
        android:textColor="#2196F3"
        android:textSize="20sp" />

</RelativeLayout>